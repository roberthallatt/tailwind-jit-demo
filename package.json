{
  "name": "tailwind-jit-demo",
  "version": "1.0.0",
  "description": "Demo Tailwindcss site using the Jit plugin",
  "main": "index.js",
  "scripts": {
    "watch:dev": "ENV NODE_ENV=development postcss ./dist/assets/css/app.src.css -o ./dist/assets/css/app.min.css -w",
    "watch:prod": "ENV NODE_ENV=production postcss ./dist/assets/css/app.src.css -o ./dist/assets/css/app.min.css -w",
    "compress:images": "imagemin dist/assets/img/* --out-dir=dist/assets/img",
    "serve": "browser-sync start --server 'dist' --files 'dist'  & npm run watch:dev",
    "build": "browser-sync start --server 'dist' --files 'dist'  & npm run watch:prod"
  },
  "keywords": [],
  "author": "Robert Hallatt",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.17",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "cssnano": "^4.1.10",
    "imagemin-cli": "^6.0.0",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.4"
  },
  "dependencies": {}
}
