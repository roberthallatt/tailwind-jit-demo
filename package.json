{
  "name": "tailwind-jit-demo",
  "version": "1.0.0",
  "description": "Tailwindcss starter project",
  "watch": {
    "panini": {
      "patterns": [
        "src/partials",
        "src/layouts",
        "src/pages",
        "src/data",
        "src/helpers"
      ],
      "extensions": "html,json,js,yaml",
      "quiet": false,
      "legacyWatch": true,
      "delay": 1500,
      "runOnChangeOnly": false
    },
    "watch:assets": {
      "patterns": [
        "src/assets"
      ],
      "extensions": "jpg,jpeg,png,gif,css",
      "ignore": "src/assets/css/tailwind.css",
      "quiet": false
    }
  },
  "scripts": {
    "prod:css": "postcss ./tailwind.css -o ./dist/assets/css/tailwind.css",
    "dev:css": "postcss ./tailwind.css -o ./dist/assets/css/tailwind.css -w",
    "panini": "panini --root=./src/pages --layouts=./src/layouts --partials=./src/partials --helpers=./src/helpers --data=./src/data --output=./dist './src/pages/**/*.html'",
    "compress:images": "imagemin dist/assets/img/* --out-dir=dist/assets/img",
    "watch:assets": "syncdir ./src/assets ./dist/assets -w",
    "tailwind-config-viewer": "tailwind-config-viewer -o",
    "serve": "browser-sync dist -w & npm run dev:css & npm run tailwind-config-viewer & npm run watch",
    "build": "npm run panini & npm run prod:tailwind:css & compress:images",
    "watch": "npm-watch"
  },
  "keywords": [],
  "author": "Robert Hallatt",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.17",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "copyfiles": "^2.4.1",
    "cssnano": "^4.1.10",
    "imagemin-cli": "^6.0.0",
    "npm-watch": "^0.9.0",
    "panini": "^1.7.1",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "sync-directory": "^2.2.17",
    "tailwind-config-viewer": "^1.5.1",
    "tailwindcss": "^2.1.2"
  },
  "dependencies": {}
}
